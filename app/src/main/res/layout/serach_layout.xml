<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@color/for_white_background_color"
    android:layout_height="wrap_content">

    <fontspackageForTextView.Regular
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/str_changes"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        ></fontspackageForTextView.Regular>

    <fontpackageforEdittext.Regular
        android:textSize="15dp"
        android:layout_margin="15dp"
        android:id="@+id/getAppId"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@drawable/upper_roundcorner_drawable"
        android:hint="@string/enterAppid"
        android:gravity="center"
        ></fontpackageforEdittext.Regular>

    <fontspackageForTextView.Regular
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/black"
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Check Changes"

        android:gravity="center"
        android:textColor="@color/white"
        >
    </fontspackageForTextView.Regular>

</LinearLayout>