<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal"
    android:weightSum="1"
    android:id="@+id/ll_toolbar_color"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/img_open_drawer"
        android:layout_gravity="center"
        android:tint="?attr/imagetint"
        android:layout_marginLeft="5dp"
        android:layout_height="25dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_nav_icon"
        ></ImageView>

     <fontspackageForTextView.Regular
         android:layout_weight=".8"
         android:id="@+id/lbl_toolbar_title"
         android:maxLines="1"
         android:textColor="?attr/colortext"
         android:textSize="18dp"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_marginLeft="10dp"
         android:text="@string/app_name"
         android:gravity="center|left"
         ></fontspackageForTextView.Regular>




    <ImageView
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:id="@+id/nav_share"
        android:layout_gravity="center"
        android:tint="?attr/imagetint"
        android:layout_marginLeft="5dp"
        android:layout_height="25dp"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:src="@drawable/share_icon"
        ></ImageView>


    <ImageView
        android:visibility="gone"
        android:id="@+id/nav_right"
        android:layout_gravity="center"
        android:tint="?attr/imagetint"
        android:layout_marginLeft="5dp"
        android:layout_height="25dp"
        android:layout_width="wrap_content"

        android:src="@drawable/ic_nav_icon"
        ></ImageView>






</LinearLayout>